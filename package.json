{
  "name": "eform-locker-system",
  "version": "1.0.0",
  "description": "RFID-based locker management system",
  "main": "dist/index.js",
  "type": "commonjs",
  "workspaces": [
    "app/gateway",
    "app/kiosk",
    "app/panel",
    "app/agent",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:gateway": "npm run build --workspace=app/gateway",
    "build:kiosk": "npm run build --workspace=app/kiosk",
    "build:panel": "npm run build --workspace=app/panel",
    "build:agent": "npm run build --workspace=app/agent",
    "build:shared": "npm run build --workspace=shared",
    "dev:gateway": "npm run dev --workspace=app/gateway",
    "dev:kiosk": "npm run dev --workspace=app/kiosk",
    "dev:panel": "npm run dev --workspace=app/panel",
    "dev:agent": "npm run dev --workspace=app/agent",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "start:gateway": "npm run start --workspace=app/gateway",
    "start:kiosk": "npm run start --workspace=app/kiosk",
    "start:panel": "node app/panel/dist/index.js",
    "start:agent": "npm run start --workspace=app/agent",
    "provision": "npm run provision --workspace=app/gateway",
    "config-test": "npm run config-test --workspace=app/gateway",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:verify": "tsx scripts/migrate.ts verify",
    "validate:nodejs": "node scripts/validate-nodejs20-compatibility.js",
    "install-all": "npm install && npm install --workspaces",
    "test:hardware": "tsx scripts/validate-waveshare-hardware.js",
    "test:integration": "tsx scripts/validate-integration.js",
    "test:soak": "vitest run --config vitest.config.comprehensive.ts app/kiosk/src/__tests__/soak/",
    "test:comprehensive": "npm run scripts/run-comprehensive-tests.sh",
    "config:setup": "node scripts/setup-config.js setup production",
    "config:setup-dev": "node scripts/setup-config.js setup development",
    "config:validate": "node scripts/setup-config.js validate production",
    "config:show": "node scripts/setup-config.js show production",
    "deploy:pi": "chmod +x scripts/quick-setup.sh && ./scripts/quick-setup.sh",
    "deploy:check": "npm run config:validate && npm run test:hardware && npm run test:integration"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.24.3",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.19.5",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
