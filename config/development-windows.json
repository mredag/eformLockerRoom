{
  "system": {
    "name": "Eform Locker System - Windows Development",
    "version": "1.0.0",
    "environment": "development",
    "location": "Windows Development Machine",
    "installation_date": "2025-09-06",
    "hardware_platform": "windows_development"
  },
  "database": {
    "path": "./data/eform-dev.db",
    "wal_mode": true,
    "backup_interval_hours": 24,
    "retention_days": 7,
    "vacuum_interval_hours": 168,
    "checkpoint_interval_seconds": 300
  },
  "services": {
    "gateway": {
      "port": 3000,
      "host": "127.0.0.1",
      "max_connections": 50,
      "request_timeout_ms": 30000,
      "keep_alive_timeout_ms": 5000
    },
    "kiosk": {
      "port": 3002,
      "host": "127.0.0.1",
      "heartbeat_interval_seconds": 10,
      "command_poll_interval_seconds": 2,
      "hardware_check_interval_seconds": 60,
      "ui_timeout_seconds": 120
    },
    "panel": {
      "port": 3001,
      "host": "127.0.0.1",
      "session_timeout_minutes": 120,
      "max_login_attempts": 10,
      "lockout_duration_minutes": 5,
      "csrf_protection": false
    },
    "agent": {
      "update_check_interval_minutes": 60,
      "update_server_url": "https://github.com/mredag/eformLockerRoom/releases",
      "auto_update": false,
      "backup_before_update": true
    }
  },
  "hardware": {
    "modbus": {
      "port": "COM1",
      "baudrate": 9600,
      "timeout_ms": 3000,
      "pulse_duration_ms": 500,
      "burst_duration_seconds": 2,
      "burst_interval_ms": 1000,
      "command_interval_ms": 100,
      "use_multiple_coils": true,
      "verify_writes": false,
      "max_retries": 2,
      "retry_delay_base_ms": 500,
      "connection_retry_attempts": 3,
      "test_mode": true
    },
    "relay_cards": [
      {
        "slave_address": 1,
        "channels": 16,
        "type": "waveshare_16ch_sim",
        "dip_switches": "00000001",
        "description": "Simulated Locker Bank 1-16 (Card 1)",
        "enabled": true
      },
      {
        "slave_address": 2,
        "channels": 16,
        "type": "waveshare_16ch_sim",
        "dip_switches": "00000010",
        "description": "Simulated Locker Bank 17-32 (Card 2)",
        "enabled": true
      },
      {
        "slave_address": 3,
        "channels": 16,
        "type": "waveshare_16ch_sim",
        "dip_switches": "00000011",
        "description": "Simulated Locker Bank 33-48 (Card 3)",
        "enabled": true
      }
    ],
    "rfid": {
      "reader_type": "keyboard",
      "debounce_ms": 500,
      "scan_timeout_ms": 15000,
      "auto_detect": true,
      "fallback_to_keyboard": true,
      "vendor_id": null,
      "product_id": null
    },
    "display": {
      "type": "desktop",
      "resolution": "1920x1080",
      "brightness": 100,
      "screensaver_timeout_minutes": 10
    }
  },
  "security": {
    "provisioning_secret": "dev-secret-not-for-production",
    "session_secret": "dev-session-secret-not-for-production",
    "pin_rotation_days": 365,
    "lockout_duration_minutes": 1,
    "rate_limits": {
      "ip_per_minute": 100,
      "card_per_minute": 100,
      "locker_per_minute": 20,
      "device_per_20_seconds": 10,
      "api_per_minute": 200
    },
    "encryption": {
      "algorithm": "aes-256-gcm",
      "key_rotation_days": 365
    },
    "audit": {
      "log_all_actions": true,
      "retention_days": 30,
      "alert_on_suspicious": false
    }
  },
  "lockers": {
    "total_count": 48,
    "offline_threshold_seconds": 120,
    "bulk_operation_interval_ms": 200,
    "master_lockout_fails": 10,
    "master_lockout_minutes": 5,
    "auto_release_hours": 1,
    "maintenance_mode": false,
    "layout": {
      "rows": 7,
      "columns": 7,
      "numbering_scheme": "sequential"
    }
  },
  "qr": {
    "token_ttl_seconds": 30,
    "hmac_secret": "dev-qr-secret-not-for-production",
    "max_scans_per_token": 5,
    "rate_limit_per_minute": 50
  },
  "logging": {
    "level": "debug",
    "retention_days": 7,
    "max_file_size_mb": 10,
    "rotate_daily": true,
    "compress_old_logs": false,
    "syslog_enabled": false,
    "remote_logging": false
  },
  "i18n": {
    "default_language": "tr",
    "supported_languages": ["tr", "en"],
    "fallback_language": "en",
    "auto_detect_browser": true
  },
  "monitoring": {
    "health_check_interval_seconds": 30,
    "performance_metrics": true,
    "hardware_monitoring": false,
    "disk_space_alert_threshold_percent": 95,
    "memory_alert_threshold_percent": 95,
    "temperature_alert_celsius": 90
  },
  "backup": {
    "enabled": false,
    "schedule": "0 2 * * *",
    "retention_count": 3,
    "compress": true,
    "remote_backup": false,
    "backup_path": "./backups"
  },
  "network": {
    "hostname": "windows-dev-eform",
    "wifi_fallback": false,
    "ethernet_priority": true,
    "ntp_servers": ["time.windows.com", "pool.ntp.org"],
    "dns_servers": ["8.8.8.8", "1.1.1.1"]
  },
  "maintenance": {
    "auto_restart_on_error": false,
    "max_restart_attempts": 1,
    "restart_cooldown_minutes": 1,
    "scheduled_maintenance_hour": 3,
    "update_notifications": false
  }
}