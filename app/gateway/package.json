{
  "name": "@eform/gateway",
  "version": "1.0.0",
  "description": "Eform Locker System - Gateway Service",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:sqlite3 --external:bcryptjs --format=cjs",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "provision": "tsx src/utils/provision.ts",
    "config-test": "tsx src/utils/config-test.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "argon2": "^0.31.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "bonjour-service": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "esbuild": "^0.19.5",
    "ts-node": "^10.9.2",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
