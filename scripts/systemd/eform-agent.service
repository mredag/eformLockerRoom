[Unit]
Description=Eform Locker System - Update Agent
Documentation=https://github.com/eform/locker-system
After=network.target
Wants=network.target

[Service]
Type=simple
User=eform
Group=eform
WorkingDirectory=/opt/eform
ExecStart=/usr/bin/node app/agent/dist/index.js
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=30
StandardOutput=journal
StandardError=journal
SyslogIdentifier=eform-agent

# Environment
Environment=NODE_ENV=production
Environment=CONFIG_PATH=/opt/eform/config/system.json
Environment=DATA_PATH=/opt/eform/data
Environment=LOG_PATH=/var/log/eform

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/eform /var/log/eform /opt/eform/backups
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true
RestrictRealtime=true
RestrictNamespaces=true

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Allow agent to restart services for updates
ExecStartPre=/bin/bash -c 'echo "eform ALL=(ALL) NOPASSWD: /bin/systemctl restart eform-*" > /etc/sudoers.d/eform-agent'

[Install]
WantedBy=multi-user.target