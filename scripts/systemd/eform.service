[Unit]
Description=eForm Locker System
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/eform-locker
ExecStart=/bin/bash /home/pi/eform-locker/scripts/deployment/start-eform-system.sh
Restart=always
RestartSec=30
TimeoutStartSec=5min

[Install]
WantedBy=multi-user.target
