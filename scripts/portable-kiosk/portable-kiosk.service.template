[Unit]
Description=Portable E-Form Kiosk Launcher
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=@KIOSK_USER@
Group=@KIOSK_USER@
WorkingDirectory=@INSTALL_DIR@
ExecStart=@INSTALL_DIR@/venv/bin/python portable_launcher.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
